<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ojo.vo.PosttblVO">

	<!-- 상품 상세 설명 얻어오기 -->
	<select id="selectByContent" parameterType="int" resultType="po">
		select * from posttbl where postnum = #{postnum}
	</select>
	
	<insert id="upload" parameterType="com.ojo.vo.PosttblVO" >
		insert into posttbl(postnum, postcontent, title, price, postgu, postdong, userid) 
		values(posttbl_postnum_seq.nextval, #{postcontent}, #{title}, #{price}, #{postgu}, #{postdong}, #{userid})
	
	</insert>
	
	<select id="selectByCategory" resultType="com.ojo.vo.CategoryVO">
		select category from categorytbl
	
	</select>
	
</mapper>














